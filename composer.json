{
    "name": "maesierra.net/japo",
    "description": "Japanese Learning companion for Spanish Speakers",

    "require": {
        "php": ">=5.6",
        "ext-PDO": "*",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "auth0/auth0-php": "~5.0",
        "aura/di": "3.2.0",
        "vlucas/phpdotenv": "2.4.0",
        "monolog/monolog": "1.23.0",
        "robmorgan/phinx": "0.10.6"
    },
    "autoload": {
        "psr-0": {
            "maesierra\\Japo": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.0",
        /*Some phpunit dependencies need to be locked to avoid any php 7 requirements*/
        "myclabs/deep-copy": "1.3.0",
        "doctrine/instantiator": "1.0.5",
        "phpdocumentor/reflection-docblock": "3.3.2",
        "phpunit/php-token-stream": "1.4.2"
    }
}
